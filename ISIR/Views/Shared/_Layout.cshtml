                        </div>
                        <div class="nav navbar-nav  pull-right">
                            <a href="@Url.Action("ChangePassword", "Home")"><span class="fas fa-lock" style="margin-right: 5px;"></span><span class="trn">Change Password</span></a>
                        </div>
                        <div class="nav navbar-nav pull-right">
                            <a href="@Url.Action("LogOut", "Home")">
                                <span class="glyphicon glyphicon-log-out"
                                      style="margin-right: 5px; color: #000000;"></span><span class="trn">Log out</span>
                            </a>
                        </div>
                    </div>
                    <div class="AuditTool">
                        <p>
                            <span class="trn">DTA QM ISIR Portal</span>
                        </p>
                    </div>



                </div>
                <!--/.nav-collapse -->
            </div>
            <!--/.container-fluid -->

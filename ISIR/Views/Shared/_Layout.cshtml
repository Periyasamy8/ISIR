            <div class="row  subnavbar-inner">
                <div class="containernav" style="margin-right: 3vw;">
                    <ul class="mainnav pull-right">
                        <li class="">
                            <a href="@Url.Action("HomePage", "Home")">
                                <i class="fas fa-home"></i><span class="trn">Home</span>
                            </a>
                        </li>
                        <li class="" id="AuditTrackerMenu">
                            <a href="@Url.Action("LabTracker", "Home")">
